{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://lancer-job-board.local/schemas/transaction.schema.json",
  "title": "Transaction",
  "description": "A financial transaction in the Manna currency system",
  "type": "object",
  "required": ["id", "date", "amount", "description"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Transaction UUID (required for pilot-transaction associations)",
      "format": "uuid"
    },
    "date": {
      "type": "string",
      "description": "ISO 8601 timestamp",
      "format": "date-time"
    },
    "amount": {
      "type": "number",
      "description": "Amount (positive for income, negative for expense)"
    },
    "description": {
      "type": "string",
      "description": "Transaction description",
      "minLength": 1
    }
  },
  "additionalProperties": false
}
